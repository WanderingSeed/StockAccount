<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textSize">@dimen/content_size</item>
    </style>

    <style name="tableLable">
        <item name="android:textSize">@dimen/content_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">@dimen/table_label_width</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/table_label_height</item>
    </style>
    <style name="tableInput">
        <item name="android:textSize">@dimen/content_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/table_label_height</item>
    </style>
</resources>