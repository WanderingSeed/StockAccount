<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="tableLable">
        <item name="android:textSize">@dimen/content_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">@dimen/table_label_width</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/table_label_height</item>
    </style>

    <style name="tableInput">
        <item name="android:textSize">@dimen/content_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/table_label_height</item>
    </style>

</resources>